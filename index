    .source{font-size:11px;color:var(--muted);margin-top:6px}
    .view-btn{background:#eef9ff;border:1px solid #d6f0ff;padding:8px 10px;border-radius:8px;cursor:pointer}

    /* modal */
    .modal{position:fixed;inset:0;background:rgba(10,12,15,0.5);display:none;align-items:center;justify-content:center;padding:20px;z-index:999}
    .modal .panel{background:white;border-radius:12px;max-width:900px;width:100%;box-shadow:0 20px 60px rgba(8,12,20,0.3);overflow:hidden;position:relative}
