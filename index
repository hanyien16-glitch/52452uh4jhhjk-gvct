<body>
  <header>
    <div class="container">
      <h1>新北旅遊景點導覽</h1>
      <p class="lead">可互動篩選、搜尋與放大圖片。圖片採用公有授權素材並標註來源。</p>
    </div>
  </header>

  <main class="container">
    <div class="controls">
      <input id="search" type="search" placeholder="搜尋景點或關鍵字（例如：九份、溫泉、老街）" />
      <select id="regionFilter">
        <option value="all">全部地區</option>
        <option value="北海岸">北海岸與金山萬里</option>
        <option value="淡水八里">淡水/八里</option>
        <option value="瑞芳">瑞芳/九份金瓜石</option>
        <option value="烏來">烏來</option>
        <option value="鶯歌">三峽/鶯歌</option>
        <option value="深坑">深坑/汐止</option>
        <option value="坪林">坪林/石碇</option>
        <option value="板橋新店">板橋/新店</option>
      </select>
      <button id="reset">重置篩選</button>
    </div>

    <section id="list" class="grid" aria-live="polite"></section>

    <footer>
      圖片來源：Unsplash / Wikimedia Commons（公有授權素材）
    </footer>
  </main>

  <div id="modal" class="modal" role="dialog" aria-modal="true">
    <div class="panel">
      <button id="close" class="close" aria-label="關閉">✕</button>
      <div class="hero"><img id="modalImg" src="" alt="景點大圖"/></div>
      <div class="content">
        <h3 id="modalTitle"></h3>
        <p id="modalRegion" style="color:var(--muted);margin-top:6px"></p>
        <p id="modalDesc" style="margin-top:10px"></p>
        <p id="modalSource" class="source"></p>
      </div>
    </div>
  </div>

  <script>
    const spots = [
      {id:1,title:'野柳地質公園',region:'北海岸',tag:'地質景觀',desc:'奇岩怪石與著名女王頭，感受海蝕地形之美。',
       img:'https://images.unsplash.com/photo-1623676676909-fcd795c9a4b8?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Hsiang-Chuan Hsu'},
      {id:2,title:'九份老街',region:'瑞芳',tag:'老街美食',desc:'山城紅燈籠街景、芋圓甜品與茶館。',
       img:'https://images.unsplash.com/photo-1536084185338-28b3d54d3e9a?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Timo Volz'},
      {id:3,title:'淡水漁人碼頭',region:'淡水八里',tag:'海景夕陽',desc:'浪漫情人橋與海上夕陽，是約會聖地。',
       img:'https://images.unsplash.com/photo-1581089781629-63747ec54a03?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Vernon Raineil Cenzon'},
      {id:4,title:'烏來瀑布',region:'烏來',tag:'山林瀑布',desc:'沿山而建的烏來瀑布與台車體驗。',
       img:'https://images.unsplash.com/photo-1604749488933-b4200a8b4c7d?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Tommy Huang'},
      {id:5,title:'鶯歌陶瓷博物館',region:'鶯歌',tag:'文化博物館',desc:'台灣陶藝重鎮，展示與手作體驗兼具。',
       img:'https://images.unsplash.com/photo-1503602642458-232111445657?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Dan Gold'},
      {id:6,title:'金瓜石黃金博物館',region:'瑞芳',tag:'礦業文化',desc:'金礦歷史、淘金體驗與礦山風光。',
       img:'https://images.unsplash.com/photo-1603449323071-51a6e0b1eb56?auto=format&fit=crop&w=800&q=80',
       source:'Wikimedia Commons / 玄史生'},
      {id:7,title:'三峽老街',region:'鶯歌',tag:'古蹟建築',desc:'紅磚拱廊與巴洛克式建築，老街懷舊風情。',
       img:'https://images.unsplash.com/photo-1625567361904-13cf5f3cb727?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Tommy Huang'},
      {id:8,title:'深坑老街',region:'深坑',tag:'美食小吃',desc:'豆腐聞名的老街，充滿傳統建築魅力。',
       img:'https://images.unsplash.com/photo-1605146768843-1b9f4c8f7a58?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Chia Ling'},
      {id:9,title:'坪林茶業博物館',region:'坪林',tag:'茶文化',desc:'了解台灣茶文化與茶園景觀的最佳地點。',
       img:'https://images.unsplash.com/photo-1508830524289-0adcbe822b40?auto=format&fit=crop&w=800&q=80',
       source:'Unsplash / Anshu A'}
    ];

    const listEl = document.getElementById('list');
    const searchEl = document.getElementById('search');
    const regionEl = document.getElementById('regionFilter');
    const resetBtn = document.getElementById('reset');
    const modal = document.getElementById('modal');
    const modalImg = document.getElementById('modalImg');
    const modalTitle = document.getElementById('modalTitle');
    const modalDesc = document.getElementById('modalDesc');
    const modalRegion = document.getElementById('modalRegion');
    const modalSource = document.getElementById('modalSource');
    const closeBtn = document.getElementById('close');

    function render(items){
      listEl.innerHTML = '';
      if(items.length===0){
        listEl.innerHTML = '<p style="grid-column:1/-1;color:var(--muted)">找不到符合條件的景點。</p>';
        return;
      }
      items.forEach(s=>{
        const card = document.createElement('article'); card.className='card';
        card.innerHTML = `
          <img loading="lazy" src="${s.img}" alt="${s.title}"/>
          <div class="body">
            <span class="tag">${s.tag}</span>
            <div class="title">${s.title}</div>
            <div class="desc">${s.desc}</div>
            <div class="meta">
              <small style="color:var(--muted)">${s.region}</small>
              <button class="view-btn" data-id="${s.id}">查看</button>
            </div>
            <div class="source">圖片來源：${s.source}</div>
          </div>
        `;
        listEl.appendChild(card);
      });
    }

    function applyFilter(){
      const q = searchEl.value.trim().toLowerCase();
      const region = regionEl.value;
      const filtered = spots.filter(s=>{
        const matchQ = q==='' || (s.title+s.desc+s.tag+s.region).toLowerCase().includes(q);
        const matchR = region==='all' || s.region===region;
        return matchQ && matchR;
      });
      render(filtered);
    }

    render(spots);
    searchEl.addEventListener('input', applyFilter);
    regionEl.addEventListener('change', applyFilter);
    resetBtn.addEventListener('click', ()=>{ searchEl.value=''; regionEl.value='all'; applyFilter(); });

    listEl.addEventListener('click', e=>{
      const btn = e.target.closest('.view-btn');
      if(!btn) return;
      const id = Number(btn.dataset.id);
      const spot = spots.find(s=>s.id===id);
      if(!spot) return;
      modalImg.src = spot.img;
      modalTitle.textContent = spot.title;
      modalDesc.textContent = spot.desc;
      modalRegion.textContent = spot.region;
      modalSource.textContent = '圖片來源：' + spot.source;
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    });

    closeBtn.addEventListener('click', ()=>{ modal.style.display='none'; document.body.style.overflow=''; });
    modal.addEventListener('click', e=>{ if(e.target===modal) { modal.style.display='none'; document.body.style.overflow=''; } });
    document.addEventListener('keydown', e=>{ if(e.key==='Escape'){ modal.style.display='none'; document.body.style.overflow=''; } });
  </script>
</body>
</html>